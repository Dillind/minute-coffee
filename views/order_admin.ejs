<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("partials/head.ejs") %>
        <title>Minute Coffee - Order Admin</title>
    </head>
    <body>
        <main>
            <%- include("partials/header.ejs") %> <%-
            include("partials/admin_nav.ejs", {access_role: access_role}) %>
            <section class="">
                <nav>
                    <a href="/order_admin?status=pending">Pending Orders</a>
                    <a href="/order_admin?status=complete">Complete Orders</a>
                    <a href="/order_admin?status=cancelled">Cancelled Orders</a>
                </nav>
                <section class="cols-3 data-list">
                    <span class="data-list-heading">Product / Customer</span>
                    <span class="data-list-heading">Order Time</span>
                    <span class="data-list-heading">Status</span>
                    <% for (let order of orders) { %>
                    <div>
                        <span><%= order.product_name %></span><br />
                        <span><%= order.customer_first_name %></span>
                    </div>
                    <span><%= order.order_datetime.toLocaleString() %></span>
                    <form
                        action="/order_admin"
                        method="post"
                        class="order-update-form"
                    >
                        <input
                            type="hidden"
                            name="order_id"
                            value="<%= order.order_id %>"
                        />
                        <select name="status">
                            <option value="" disabled selected>Select</option>
                            <option value="pending">Pending</option>
                            <option value="complete">Complete</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                        <input type="submit" value="Update" />
                    </form>
                    <% } %>
                </section>
            </section>
            <%- include("partials/footer.ejs") %>
        </main>
    </body>
</html>
