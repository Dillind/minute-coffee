<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("partials/head.ejs") %>
        <title>Minute Coffee - User Admin</title>
    </head>
    <body>
        <main>
            <%- include("partials/header.ejs") %>
            <section class="half-half-layout">
                <section class="cols-4 data-list">
                    <span class="data-list-heading">Name</span>
                    <span class="data-list-heading">Username</span>
                    <span class="data-list-heading">Role</span>
                    <span></span>
                    <% for (let user of users) { %>
                    <span><%= user.first_name %> <%= user.last_name %></span>
                    <span><%= user.username %></span>
                    <span><%= user.access_role %></span>
                    <a
                        href="/user_admin?edit_id=<%= user.user_id %>"
                        class="link-button"
                        >Edit</a
                    >
                    <% } %>
                </section>
                <form action="/edit_user" method="post" class="form-grid">
                    <input
                        type="hidden"
                        name="user_id"
                        value="<%= edit_user.user_id %>"
                    />
                    <label for="first-name">First Name:</label>
                    <input
                        type="text"
                        name="first_name"
                        id="first-name"
                        value="<%= edit_user.first_name %>"
                    />
                    <label for="last-name">Last Name:</label>
                    <input
                        type="text"
                        name="last_name"
                        id="last-name"
                        value="<%= edit_user.last_name %>"
                    />
                    <label for="access-role">Access Role</label>
                    <select name="access_role" id="access-role">
                        <option value="admin">Admin</option>
                        <option value="stock">Stock</option>
                        <option value="sales">Sales</option>
                    </select>
                    <script>
                        // This is a hack to set the selected option of the select box above
                        document.getElementById("access-role").value =
                            "<%= edit_user.access_role %>";
                    </script>
                    <label for="username">Username:</label>
                    <input
                        type="text"
                        name="username"
                        id="username"
                        value="<%= edit_user.username %>"
                    />
                    <label for="password">Password:</label>
                    <input
                        type="password"
                        name="password"
                        id="password"
                        value="<%= edit_user.password %>"
                    />
                    <input type="submit" name="action" value="delete" />
                    <% if (edit_user.user_id == "0") { %>
                    <input type="submit" name="action" value="create" />
                    <% } else { %>
                    <input type="submit" name="action" value="update" />
                    <% } %>
                </form>
            </section>
            <%- include("partials/footer.ejs") %>
        </main>
    </body>
</html>
