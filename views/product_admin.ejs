<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("partials/head.ejs") %>
        <title>Minute Coffee - Product Admin</title>
    </head>
    <body>
        <main>
            <%- include("partials/header.ejs") %> <%-
            include("partials/admin_nav.ejs", {access_role: access_role}) %>
            <section class="half-half-layout">
                <section class="cols-5 data-list">
                    <span class="data-list-heading">Name</span>
                    <span class="data-list-heading">Stock</span>
                    <span class="data-list-heading">Price</span>
                    <span class="data-list-heading">Updated By</span>
                    <span></span>
                    <% for (let product of products) { %>
                    <span><%= product.name %></span>
                    <span><%= product.stock %></span>
                    <span><%= product.price %></span>
                    <span><%= product.username %></span>
                    <a
                        href="/product_admin?edit_id=<%= product.product_id %>"
                        class="link-button"
                        >Edit</a
                    >
                    <% } %>
                </section>
                <form action="/edit_product" method="post" class="form-grid">
                    <input
                        type="hidden"
                        name="product_id"
                        value="<%= edit_product.product_id %>"
                    />
                    <label for="name">Name:</label>
                    <input
                        type="text"
                        name="name"
                        id="name"
                        value="<%= edit_product.name %>"
                    />
                    <label for="stock">Stock:</label>
                    <input
                        type="text"
                        name="stock"
                        id="stock"
                        value="<%= edit_product.stock %>"
                    />
                    <label for="price">Price:</label>
                    <input
                        type="text"
                        name="price"
                        id="price"
                        value="<%= edit_product.price %>"
                    />
                    <label for="description">Description:</label>
                    <textarea name="description" id="description">
<%= edit_product.description %></textarea
                    >
                    <input type="submit" name="action" value="delete" />
                    <% if (edit_product.product_id == "0") { %>
                    <input type="submit" name="action" value="create" />
                    <% } else { %>
                    <input type="submit" name="action" value="update" />
                    <% } %>
                </form>
            </section>
            <%- include("partials/footer.ejs") %>
        </main>
    </body>
</html>
